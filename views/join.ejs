  $("#btnIdCheck").on("click", () => {
    if ($("#userID").val().length > 7) {
      $.ajax({
        url: "/idCheck",
        method: "POST",
        data: {
          userID: $("#userID").val(),
        },
      }).done((response) => {
        //console.log(response);
        if (response.isOk) {
          const result = confirm("쓸수 있는 아이디 입니다.");
          if (result) {
            $("#userID").attr("readonly", true);
            isIdChecked = true;
          } else {
            $("#userID").focus();
            $("#userID").val("");
            isIdChecked = false;
          }
        } else {
          //alert("쓸수 없는 아이디 입니다.");
          console.log("쓸 수 없는 아이디 입니다.");
          $("#userID").val("");
          $("#userID").focus();
        }
      });
    } else {
      alert("아이디는 8글자 이상이어야 합니다.");
      $("#userID").focus();
    }
    return false;
  });
  const btnJoin = document.querySelector("#btnJoin");
  $("#btnJoin").on("click", () => {
    console.log($("#userID").val().trim().length);
    if ($("#userID").val().trim().length < 8) {
      alert("아이디는 최소 8자 이상이어야 합니다.");
      $("#userID").focus();
      return false;
    } else if (isIdChecked === false) {
      alert("ID 중복체크를 해주세요.");
      return false;
    } else if ($("#userPW").val().trim().length < 8) {
      alert("아이디는 최소 8자 이상이어야 합니다.");
      $("#userPW").focus();
      return false;
    } else if ($("#userName").val().trim().length < 3) {
      alert("이름은 최소 3자 이상이어야 합니다.");
      $("#userPW").focus();
      return false;
    } else if ($("#userEmail").val().trim().length <= 0) {
      alert("이메일을 입력해 주세요.");
      $("#userEmail").focus();
      return false;
    }
  });
</script>
